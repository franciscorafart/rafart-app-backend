{
  "extends": "./tsconfig",
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node"]
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/*.mock.ts"]
}
