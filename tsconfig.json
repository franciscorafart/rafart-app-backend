{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es5", "es6"],
    "module": "CommonJS",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false, // To not initialize properties in the Typeorm constructor
    "sourceMap": true,
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "paths": {
    "@/*": ["./src/*"]
  },
  "types": ["node", "jest"],
  "include": ["src"]
}
